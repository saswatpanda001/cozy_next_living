<footer class="bg-gray-800 text-white">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Shop</h3>
        <ul class="mt-4 space-y-4">
          <li><%= link_to "All Products", products_path, class: "text-base text-gray-300 hover:text-white" %></li>
          <li><%= link_to "New Arrivals", products_path(new_arrivals: true), class: "text-base text-gray-300 hover:text-white" %></li>
          <li><%= link_to "On Sale", products_path(on_sale: true), class: "text-base text-gray-300 hover:text-white" %></li>
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Company</h3>
        <ul class="mt-4 space-y-4">
          <li><%= link_to "About Us", about_path, class: "text-base text-gray-300 hover:text-white" %></li>
          <li><%= link_to "Contact", contact_path, class: "text-base text-gray-300 hover:text-white" %></li>
          <li><%= link_to "Careers", "#", class: "text-base text-gray-300 hover:text-white" %></li>
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Customer Service</h3>
        <ul class="mt-4 space-y-4">
          <li><%= link_to "Shipping Policy", "#", class: "text-base text-gray-300 hover:text-white" %></li>
          <li><%= link_to "Returns & Exchanges", "#", class: "text-base text-gray-300 hover:text-white" %></li>
          <li><%= link_to "FAQ", "#", class: "text-base text-gray-300 hover:text-white" %></li>
        </ul>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Connect</h3>
        <div class="mt-4 flex space-x-6">
          <a href="#" class="text-gray-400 hover:text-gray-300">
            <span class="sr-only">Facebook</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
            </svg>
          </a>
          <!-- More social links... -->
        </div>
        <div class="mt-8">
          <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">Subscribe to our newsletter</h3>
          <form class="mt-4 sm:flex">
            <label for="email" class="sr-only">Email</label>
            <input type="email" id="email" required class="w-full px-5 py-3 placeholder-gray-500 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 sm:max-w-xs border border-transparent rounded-md" placeholder="Enter your email">
            <div class="mt-3 rounded-md sm:mt-0 sm:ml-3 sm:flex-shrink-0">
              <button type="submit" class="w-full flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Subscribe
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="mt-12 border-t border-gray-700 pt-8">
      <p class="text-base text-gray-400 text-center">
        &copy; <%= Time.current.year %> Cozy Nest Living. All rights reserved.
      </p>
    </div>
  </div>
</footer>