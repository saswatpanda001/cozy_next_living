# app/views/shared/_cart_notification.html.erb
<div id="cart-notification" class="fixed bottom-4 right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg flex items-center space-x-2 transition-opacity duration-300">
  <span><%= "#{quantity} Ã— #{product.name} added to cart" %></span>
  <%= link_to "View Cart", cart_path, class: "underline font-medium" %>
</div>

<script>
  setTimeout(() => {
    const notification = document.getElementById('cart-notification');
    if (notification) {
      notification.style.opacity = '0';
      setTimeout(() => notification.remove(), 300);
    }
  }, 3000);
</script>