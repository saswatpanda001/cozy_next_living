<%= render 'shared/navbar1' %>

<div class="min-h-screen bg-gray-50 p-6">
  <!-- Header Section -->
  <div class="max-w-7xl mx-auto mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
    <p class="mt-2 text-gray-600">Manage your store content and settings</p>
  </div>

  <!-- Stats Cards Grid -->
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Products Card -->
    <%= link_to backend_products_path, class: "group bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:border-blue-500 hover:shadow-md transition-all duration-200" do %>
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">Products</h2>
        <div class="p-3 rounded-lg bg-blue-50 text-blue-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
        </div>
      </div>
      <p class="text-gray-600 mb-2">Manage your product catalog</p>
      <div class="flex items-center text-sm text-gray-500">
        <span class="inline-block w-2 h-2 rounded-full bg-blue-500 mr-2"></span>
        <span><%= @products_count || 0 %> products</span>
      </div>
    <% end %>

    <!-- Categories Card -->
    <%= link_to backend_categories_path, class: "group bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:border-green-500 hover:shadow-md transition-all duration-200" do %>
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900 group-hover:text-green-600 transition-colors">Categories</h2>
        <div class="p-3 rounded-lg bg-green-50 text-green-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
          </svg>
        </div>
      </div>
      <p class="text-gray-600 mb-2">Organize your products</p>
      <div class="flex items-center text-sm text-gray-500">
        <span class="inline-block w-2 h-2 rounded-full bg-green-500 mr-2"></span>
        <span><%= @categories_count || 0 %> categories</span>
      </div>
    <% end %>

    <!-- Pages Card -->
    <%= link_to backend_pages_path, class: "group bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:border-purple-500 hover:shadow-md transition-all duration-200" do %>
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900 group-hover:text-purple-600 transition-colors">Pages</h2>
        <div class="p-3 rounded-lg bg-purple-50 text-purple-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
      <p class="text-gray-600 mb-2">Edit site content</p>
      <div class="flex items-center text-sm text-gray-500">
        <span class="inline-block w-2 h-2 rounded-full bg-purple-500 mr-2"></span>
        <span><%= @pages_count || 0 %> pages</span>
      </div>
    <% end %>
  </div>

  <!-- Recent Activity Section -->
  <div class="max-w-7xl mx-auto mt-12">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Recent Activity</h2>
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <!-- Activity content would go here -->
      <div class="p-6 text-center text-gray-500">
        <p>Recent updates and activities will appear here</p>
      </div>
    </div>
  </div>
</div>