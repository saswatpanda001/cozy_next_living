<%= render 'shared/local' %>

<!-- Hero Section -->
<section class="relative bg-gray-900 text-white">
  <div class="absolute inset-0">
    <!-- Replace with your actual hero image -->
    <img class="w-full h-full object-cover opacity-50" src="https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Cozy living room">
  </div>
  <div class="relative max-w-7xl mx-auto px-4 py-32 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold tracking-tight sm:text-5xl lg:text-6xl">
        Get In Touch With Us
      </h1>
      <p class="mt-6 text-xl max-w-3xl mx-auto">
        We would love to hear from you. Fill out the form below to send us a message.
      </p>
    </div>
  </div>
</section>

<!-- Contact Form -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h2 class="text-3xl font-extrabold text-gray-900 mb-8 text-center">Contact Information</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <div>
      <h3 class="text-xl font-semibold mb-4">Our Information</h3>
      
      <% if @page.contact_info.present? %>
        <div class="prose mb-6">
          <%= simple_format @page.contact_info %>
        </div>
      <% end %>

      <div class="space-y-4">
        <% if @page.address.present? %>
          <div>
            <h3 class="text-sm font-medium text-gray-500">Address</h3>
            <p class="mt-1 text-gray-700 whitespace-pre-line"><%= @page.address %></p>
          </div>
        <% end %>

        <% if @page.phone.present? %>
          <div>
            <h3 class="text-sm font-medium text-gray-500">Phone</h3>
            <p class="mt-1 text-gray-700"><%= @page.phone %></p>
          </div>
        <% end %>

        <% if @page.email.present? %>
          <div>
            <h3 class="text-sm font-medium text-gray-500">Email</h3>
            <p class="mt-1 text-gray-700"><%= @page.email %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
