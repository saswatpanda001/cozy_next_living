<!-- app/views/products/_product_card.html.erb -->
<div class="bg-white rounded-lg shadow overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <%= link_to product_path(product), class: "block" do %>
    <% if product.image.attached? %>
      <%= image_tag product.image.variant(resize_to_limit: [400, 400]), class: "w-full h-48 object-cover" %>
    <% else %>
      <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
        <span class="text-gray-400">No image available</span>
      </div>
    <% end %>

    <div class="p-4">
      <div class="flex justify-between items-start">
        <div>
          <h3 class="text-lg font-medium text-gray-900 hover:text-indigo-600">
            <%= product.name %>
          </h3>
          <p class="mt-1 text-sm text-gray-500"><%= product.category.name %></p>
        </div>
        <p class="text-lg font-semibold text-gray-900"><%= number_to_currency(product.price) %></p>
      </div>
      
      <p class="mt-2 text-sm text-gray-600 line-clamp-2"><%= product.description %></p>
      
      <% if product.on_sale? %>
        <span class="inline-flex items-center mt-2 px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">On Sale</span>
      <% end %>
    </div>
  <% end %>
</div>